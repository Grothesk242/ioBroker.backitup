{
    "type": "panel",
    "label": "PostgreSQL Backup",
    "items": {
        "_checkConfig": {
            // this component is not visible in the UI
            // it checks the configuration
            "type": "custom",
            "i18n": true,
            "url": "custom/customComponents.js",
            "name": "ConfigCustomBackItUpSet/Components/CheckAllConfigInvisible"
        },
        "_header": {
            "type": "header",
            "size": 2,
            "text": "PostgreSQL Backup",
            "sm": 12,
        },
        "detectNow": {
            "type": "custom",
            "hidden": "data.pgSqlMulti",
            "button": true,
            "variant": "contained",
            "url": "custom/customComponents.js",
            "name": "ConfigCustomBackItUpSet/Components/DetectConfig",
            "adapter": "pgSql",
            "icon": "search",
            "label": "Detect config",
            "sm": 9,
            "md": 6,
            "lg": 3
        },
        "_helpLine1": {
            "hidden": "data.pgSqlMulti",
            "newLine": true,
            "type": "divider",
            "color": "primary"
        },
        "pgSqlHost": {
            "hidden": "data.pgSqlMulti",
            "sm": 12,
            "md": 8,
            "lg": 4,
            "type": "text",
            "label": "PostgreSQL Hostname",
            "newLine": true
        },
        "pgSqlPort": {
            "hidden": "data.pgSqlMulti",
            "sm": 12,
            "md": 8,
            "lg": 4,
            "min": 1,
            "max": 65535,
            "type": "number",
            "label": "PostgreSQL port",
        },
        "pgSqlName": {
            "hidden": "data.pgSqlMulti",
            "sm": 12,
            "md": 8,
            "lg": 4,
            "type": "text",
            "label": "PostgreSQL database name",
        },
        "pgSqlUser": {
            "hidden": "data.pgSqlMulti",
            "sm": 12,
            "md": 8,
            "lg": 4,
            "type": "text",
            "label": "PostgreSQL username",
            "newLine": true
        },
        "pgSqlPassword": {
            "hidden": "data.pgSqlMulti",
            "sm": 12,
            "md": 8,
            "lg": 4,
            "type": "password",
            "visible": true,
            "label": "PostgreSQL password",
        },
        "pgSqlDumpExe": {
            "hidden": "data.pgSqlMulti",
            "sm": 12,
            "md": 8,
            "lg": 4,
            "type": "text",
            "label": "Full path",
            "help": "Path with filename to postgresql executable (leave empty to use default)",
        },
        "pgSqlMulti": {
            "type": "checkbox",
            "label": "Backup of several systems",
            "sm": 12,
            "md": 8,
            "lg": 4,
            "newLine": true
        },
        "_helpLine2": {
            "hidden": "!data.pgSqlMulti",
            "newLine": true,
            "type": "divider",
            "color": "primary"
        },
        "pgSqlEvents": {
            "newLine": true,
            "type": "table",
            "sm": 12,
            "label": "PostgreSQL hosts",
            "hidden": "!data.pgSqlMulti",
            "encryptedAttributes": [
                "pass"
            ],
            "labelsInHeader": true,
            "items": [
                {
                    "attr": "host",
                    "type": "text",
                    "title": "host",
                    width: "15%"
                },
                {
                    "attr": "port",
                    "type": "number",
                    "title": "Port",
                    width: "7%"
                },
                {
                    "attr": "user",
                    "type": "text",
                    "title": "Username",
                    width: "15%"
                },
                {
                    "attr": "pass",
                    "type": "password",
                    "title": "Password",
                    width: "15%"
                },
                {
                    "attr": "dbName",
                    "type": "text",
                    "title": "Database name",
                    width: "15%"
                },
                {
                    "attr": "nameSuffix",
                    "type": "text",
                    "title": "Name suffix",
                    width: "15%"
                },
                {
                    "attr": "exe",
                    "type": "text",
                    "title": "Full path",
                    width: "18%"
                },
            ]
        }
    }
}
